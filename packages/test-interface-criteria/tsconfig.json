{
  "compilerOptions": {
    "outDir": "built-types/",
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js"
  ]
}