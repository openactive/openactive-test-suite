{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "app.js",
    "src/listeners/**/*.js",
    "src/models/**/*.d.ts",
    "src/util/**/*.js",
    "src/*.js"
  ]
}