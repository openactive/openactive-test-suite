{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": [
    "app.js",
    "src/**/*.js",
    "src/**/*.d.ts",
    "test/**/*.js",
    "test/**/*.d.ts"
  ]
}